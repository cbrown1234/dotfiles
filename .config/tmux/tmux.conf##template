# WARNING: Do not edit this file.
# It was generated by processing {{ yadm.source }}

# set scroll history to 100,000 lines
set-option -g history-limit 100000

# modern colors
set -g default-terminal "tmux-256color"
set -ga terminal-overrides ",alacritty:Tc"

# rebind the prefix 
unbind C-b
{% if yadm.class == "server" %}
# binding it to Ctrl-s to avoid clash with local
set -g prefix C-s
bind C-s send-prefix
{% else %}
# binding it to Ctrl-a like screen
set -g prefix C-a
bind C-a send-prefix
{% endif %}

# Mouse friendly
setw -g mouse on

set-option -g default-shell /home/linuxbrew/.linuxbrew/bin/fish

# Avoid ESC delay
# 0 causes odd characters to appear on wsl
set -s escape-time 1

# Recommended by `nvim` `:checkhealth`
set-option -g focus-events on

# Sources
# https://github.com/jonhoo/configs/blob/master/shell/.tmux.conf

# Auto-renaming
set-option -g status-interval 5
set-option -g automatic-rename on
set-option -g automatic-rename-format '#{b:pane_current_path}'
